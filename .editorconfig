root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 230

[*.ts]
indent_style = space
indent_size = 2
max_line_length = 230
quote_type = single
semicolon = true

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
max_line_length = 230
